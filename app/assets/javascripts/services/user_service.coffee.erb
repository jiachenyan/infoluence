
angular.module('Infoluence').service 'UserService', [

 '$http'
 ($http) ->
 
  @getUserInfo = (username) =>
   url = "/#{username}.json"
   req =
    method : "GET"
    url : url
    dataType : "json"
   promise = $http(req)
   promise

 
  @follow = (username) =>
   url = "/user/follow/#{username}.json"
   req =
    method : "PUT"
    url : url
    dataType : "json"
   promise = $http(req)
   promise

  @getFollowing = (username,pageNum) =>

   url = "/#{username}/following/#{pageNum}.json"
   req =
    method : "GET"
    url : url
    dataType : "json"
   promise = $http(req)
   promise




  return

]